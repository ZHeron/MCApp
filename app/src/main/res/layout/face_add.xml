<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="组号："
         android:textSize="23sp"
         android:layout_weight="2"></TextView>
        <com.mcapp.mcapp.widget.EditableSpinner
            android:id="@+id/groupId"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="50dp"
            app:textSize="23dp"
            app:textColor="@color/colorBlack"
            app:downBtnImage="@drawable/arrow"
            app:downBtnBackground="@color/colorAccent"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="用户号："
            android:textSize="23sp"
            android:layout_weight="2"></TextView>
        <EditText
            android:id="@+id/userId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="用户信息："
            android:textSize="20sp"
            android:layout_weight="2"></TextView>
        <EditText
            android:id="@+id/userInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="确认"
            style="@style/button_blue_style2"
            android:textSize="30sp"/>

        <Button android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="取消"
            style="@style/button_blue_style2"
            android:textSize="30sp"/>
    </LinearLayout>

</LinearLayout>